---
import data from "../data/icon.json";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href={data.image} />
    <!-- <link rel="preconnect" href="https://fonts.googleapis.com"> -->
    <!-- <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin> -->
    <!-- <link rel="preload" as="style" href="https://fonts.googleapis.com/css2?family=Montserrat:wght@100;200;300;400&display=swap"> -->
    <!-- <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@100;200;300;400&display=swap" rel="stylesheet"> -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;500;700&display=swap" rel="stylesheet">
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content="Karolina NocoÅ„ photography portfolio" />
  </head>
  <body class="bg-grey-7 text-grey-1 mx-auto">
    <!-- <div class="fixed top-0 left-0 text-xs font-bold bg-purple-400 p-1 pr-2 rounded-br-md z-50">BETA</div> -->
    <slot />
  </body>
</html>

<style is:global>
@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
  body {
    font-family: "Open Sans", sans-serif;
  }
  h1, h2, h3, h4, h5, h6 {
    font-weight: bold;
  }
  h1 {
    font-size: 2.4em;
  }
  h2 {
    font-size: 1.5em;
  }
  h3 {
    font-size: 1.17em;
  }
  h4 {
    font-size: 1em;
  }
  h5 {
    font-size: .83em;
  }
  h6 {
    font-size: .67em;
  }
  .my-prose p {
    margin-bottom: 0.5rem;
    margin-top: 0.5rem;
  }
}
@layer utilities {
  .transition-1 {
    @apply duration-500 ease-expo;
  }
}
</style>
