---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"button"> {
  blur?: boolean;
}
---

<button
  class={`w-12 cursor-pointer transition-colors z-10
    ${Astro.props.blur ? "hover:bg-black/25" : "hover:bg-grey-6"}
    ${Astro.props.class ?? ""}
  `}
  {...Astro.props}
>
  <slot />
</button>
