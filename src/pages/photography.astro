---
import { getImage } from "@astrojs/image";
import Nav from "@components/Nav.astro";
import Layout from "@layouts/Layout.astro";
import Main from "@layouts/Main.astro";
import { getAsset, toUrl } from "@lib/util";

interface Thumb {
  name: string;
  src: string;
}

let photoSets = await Astro.glob("../data/photography/*.json");
photoSets = photoSets.sort((a, b) => a.index - b.index);
let thumbs: Thumb[] = [];

for (let photoSet of photoSets) {
  const img = await getAsset(photoSet.thumb);
  // TODO: Can we just use Image instead of getImage?
  const imgTransformed = await getImage({
    src: img.default.src,
    alt: "photo",
    width: 416 * 1.1,
    height: 160 * 1.1,
    format: "webp",
    quality: 90,
  });

  if (imgTransformed.src == null) {
    throw new Error("Astro's getImage failed. src is not present.");
  }

  thumbs.push({
    name: photoSet.name,
    src: imgTransformed.src,
  });
}
---

<Layout title="Karolina NocoÅ„ - Photography">
  <Main class="sm:!w-auto xl:w-wide overflow-hidden flex flex-col gap-16">
    <Nav />
    <ul class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-2 mx-auto">
      {
        thumbs.map((thumb) => (
          <li>
            <a
              href={"/photography/" + toUrl(thumb.name)}
              class="w-[26rem] h-[10rem] flex items-center justify-center relative overflow-clip group"
            >
              <img
                src={thumb.src}
                alt=""
                class="absolute transition-transform group-hover:scale-110 w-full duration-500 ease-expo"
                width="416"
              />
              <div class="absolute inset-0 bg-black/60 opacity-0 transition-opacity duration-500 ease-expo group-hover:opacity-100" />
              <span class="z-10 text-grey-7 tracking-[0.2em] text-lg font-medium drop-shadow-text-1 duration-500 ease-expo transition-all group-hover:tracking-[0.5em]">
                {thumb.name}
              </span>
            </a>
          </li>
        ))
      }
    </ul>
  </Main>
</Layout>
